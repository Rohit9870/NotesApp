<% if notice %>
  <div class="container">
    <p style="color: green" class="text-center border border-success rounded p-2 mt-2">
      <%= notice %>
    </p>
  </div>
<% end %>
<div class="container justify-content-center mt-2">
  <div class="card">
    <div class="card-body">
      <div class="text-center h2">
        <%= @note.title %>
      </div>
      <hr>
      <div class="bg-secondary text-white p-2 rounded">
        <%= @note.content %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-between pt-5">
    <%= link_to "Edit", edit_note_path(@note), class: 'btn btn-primary' %>
    <%= link_to "Back", notes_path, class: 'btn btn-primary' %>
    <%= button_to "Delete", @note, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>

