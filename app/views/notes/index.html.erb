<% if notice %>
  <div class="container">
    <p style="color: green" class="text-center border border-success rounded p-2 mt-2">
      <%= notice %>
    </p>
  </div>
<% end %>
<div class="container-fluid mt-2">
  <div class="mt-2 mb-3 text-center">
    <%= link_to "New Note", new_note_path, class: 'btn btn-outline-primary' %>
  </div>
  <div class="row justify-content-center">
    <% @notes.each do |note| %>
      <div class="col-sm-6 col-lg-4 d-flex justify-content-around">
        <div class="card mb-4" style="width: 22rem; height: 12rem;" id="note-<%= note.id %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center"><%= note.title %></h5>
            <p class="card-text"><%= truncate(note.content, length: 100) %></p>

            <div class="mt-auto d-flex justify-content-between">
              <a href="<%= note_path(note) %>" class="btn btn-primary btn-sm mx-1">View</a>
              <a href="<%= edit_note_path(note) %>" class="btn btn-secondary btn-sm mx-1">Edit</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

    <!-- Pagination Controls -->
  <div class="fixed-bottom">
    <div class="pagination justify-content-center mt-4">
      <%= will_paginate @notes %>
    </div>
  </div>
</div>

